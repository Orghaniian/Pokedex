<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/PokemonListFragment">

    <fragment
        android:id="@+id/PokemonListFragment"
        android:name="com.orghaniian.pokedex.ui.pokemonlist.PokemonListFragment"
        android:label="@string/pokemon_list_fragment_label"
        tools:layout="@layout/fragment_pokemon_list">
        <action
            android:id="@+id/action_PokemonListFragment_to_pokemonDetailsFragment"
            app:destination="@id/pokemonDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/pokemonDetailsFragment"
        android:name="com.orghaniian.pokedex.ui.pokemondetails.PokemonDetailsFragment"
        android:label="{title}"
        tools:layout="@layout/fragment_pokemon_details" >
        <argument
            android:name="order"
            app:argType="integer" />
        <argument
            android:name="title"
            app:argType="string" />
    </fragment>
</navigation>
